{% extends 'layouts/master.html.twig' %}

{% block content %}
    <div class="col-md-4 col-md-offset-4">
        <div class="panel panel-default panel-login">
            <div class="panel-heading"> Login</div>
            <div class="panel-body">
                {% if failure == true %}
                    <div class="alert alert-danger">Credenciais inválidas</div>
                {% endif %}
                <form method="POST">
                    <div class="form-group">
                        <label for="uname-id">Login:</label>
                        <input id="uname-id" class="form-control" name="uname" placeholder="Nome de usuário" type="text">
                    </div>

                    <div class="form-group">
                        <label for="pwd-id">Senha:</label>
                        <input id="pwd-id" class="form-control" name="pwd" placeholder="Senha" type="password">
                    </div>
                    <hr>
                    <div class="form-group">
                        <input class="btn btn-primary" value="Login" type="submit">
                        <input class="btn btn-default" type="reset" value="Limpar campos">
                    </div>

                </form>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
{% endblock %}