{% extends 'layouts/master.html.twig' %}

{% block content %}
    {% include 'layouts/navbar.html.twig' %}

<div class="container">
    <h1> DESABILITAR USU√ÅRIOS </h1>
    
    <form method="POST">
        <table class="table">
            <thead>
                <th></th>
                <th>ID</th>
                <th>Nome</th>
                <th>Status</th>
            </th ead> 
  
            {% for user in Enabled %}
            <tr class="info">
        	    <td><input type="checkbox" name="disable[]" value="{{user.id}}"></td>
        	    <td>{{user.id}}</td>
        	    <td>{{user.name}}</td>
                <td>Habilitado</td> 
            </tr>
            {% endfor %}

            {% for user in Disabled %}
            <tr class="danger">
            	<td><input type="checkbox" name="enable[]" value="{{user.id}}"></td>
            	<td>{{user.id}}</td>
        	    <td>{{user.name}}</td>
                <td>Banido</td> 
            </tr>
            {% endfor %}

        </table>
        <input class="btn btn-default" type="submit" value="Aplicar">
    </form>
    {% if warning_message != '' %}
    <div class="panel panel-warning">
        <div class="panel-heading">{{warning_message}}</div>
    </div>
    {% endif %}
</div>   
{% endblock %}