{% extends 'layouts/master.html.twig' %}

{% block content %}
    {% include 'layouts/navbar.html.twig' %}
    <div class="row text-center">

    <div class="col-md-12 ">
    <h3>Hourly</h3>
    <table class="table table-fixed table-bordered">
    <tr class="row">
        <th class="col-md-1">Date</th>
        <th class="col-md-1">UVIndex</th>
        <th class="col-md-1">SolarRad</th>
        <th class="col-md-1">Rain</th>
        <th class="col-md-1">Bar</th>
        <th class="col-md-1">WindSpeed</th>
        <th class="col-md-1">OutHum</th>
        <th class="col-md-1">LowTemp</th>
        <th class="col-md-1">DewPt</th>
        <th class="col-md-1">HiTemp</th>
        <th class="col-md-1">TempOut</th>
    </tr>
    {% for date,values in hourly %}
        <tr class="row">
        <td class="col-md-1">{{date}}</td>
        {% for val in values %}
        <td class = "col-md-1">
            <div class="progress">
                <div class="progress-bar-success" role="progressbar" aria-valuenow="{{val * 100}}" aria-valuemin="0" aria-valuemax="100" style="width:70%">{{val * 100}}% </div>
            </div> 
        </td>
