{% extends 'layouts/master.html.twig' %}

{% block content %}
    {% include 'layouts/navbar.html.twig' %}

    <div class="row">
        <div class="col-sm-12">
            <h1 class="text-center"> Seja bem vindo, {{session.name}}! </h1>
            <hr>
        </div>
        <div class = "col-sm-12">
            <div class="col-md-3 text-center ">
                <h3>Hourly</h3>
                <p class = text-right><a>Ver mais...</a></p>
                <hr>
                <table class="table table-bordered">
                    <tr class="row">
                        <th class="col-md-1">Date</th>
                        <th class="col-md-1">WindSpeed</th>
                        <th class="col-md-1">LowTemp</th>
                        <th class="col-md-1">HiTemp</th>
                    </tr>
                    {% for date,values in hourly %}
                        <tr class="row">
                            <td class="col-md-1">{{date}}</td>
                            {% for val in values %}
                                <td class = "col-md-1">
                                    <div class="progress">
                                        <div class="progress-bar-success" role="progressbar" aria-valuenow="{{val * 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{ val*100 }}%">{{val *100}}% </div>
                                    </div>
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
            <div class="col-md-3 col-md-offset-1 text-center ">
                <h3>Daily</h3>
                <p class = text-right><a>Ver mais...</a></p>
                <hr>
                <table class="table table-fixed table-bordered">
                    <tr class="row">
                        <th class="col-md-1">Date</th>
                        <th class="col-md-1">WindSpeed</th>
                        <th class="col-md-1">LowTemp</th>
                        <th class="col-md-1">HiTemp</th>
                    </tr>
                    {% for date,values in daily %}
                        <tr class="row">
                            <td class="col-md-1">{{date}}</td>
                            {% for val in values %}
                                <td class = "col-md-1">
                                    <div class="progress">
                                        <div class="progress-bar-success" role="progressbar" aria-valuenow="{{val * 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{ val*100 }}%">{{val *100}}% </div>
                                    </div>
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>

            <div class="col-md-3 col-md-offset-1 text-center ">
                <h3>Monthly</h3>
                <p class = text-right><a>Ver mais...</a></p>
                <hr>
                <table class="table table-fixed table-bordered">
                    <tr class="row">
                        <th class="col-md-1">Date</th>
                        <th class="col-md-1">WindSpeed</th>
                        <th class="col-md-1">LowTemp</th>
                        <th class="col-md-1">HiTemp</th>
                    </tr>
                    {% for date,values in monthly %}
                        <tr class="row">
                            <td class="col-md-1">{{date}}</td>
                            {% for val in values %}
                                <td class = "col-md-1">
                                    <div class="progress">
                                        <div class="progress-bar-success" role="progressbar" aria-valuenow="{{val * 100}}" aria-valuemin="0" aria-valuemax="100" style="width:{{ val*100 }}%">{{val *100}}% </div>
                                    </div>
                                </td>
                            {% endfor %}
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
        <div class = "row">
            <div class = "col-sm-12">
                <div class="col-md-3 col-md-offset text-center ">
                    <h3>Yearly</h3>
                    <p class = text-right><a>Ver mais...</a></p>
                    <hr>
                    <table class="table table-fixed table-bordered">
                        <tr class="row">
                            <th class="col-md-1">Date</th>
                            <th class="col-md-1">WindSpeed</th>
                            <th class="col-md-1">LowTemp</th>
                            <th class="col-md-1">HiTemp</th>
                        </tr>
                        {% for date,values in yearly %}
                            <tr class="row">
                                <td class="col-md-1">{{date}}</td>
                                {% for val in values %}
                                    <td class = "col-md-1">
